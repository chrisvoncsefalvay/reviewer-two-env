# Green Agent Dockerfile for AgentBeats A2A Protocol
# Builds a containerised evaluation agent for the research plan benchmark

FROM python:3.11-slim-bookworm

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PIP_NO_CACHE_DIR=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash agent

# Set working directory
WORKDIR /home/agent/app

# Copy project files (as root for proper permissions)
COPY --chown=agent:agent pyproject.toml README.md ./
COPY --chown=agent:agent research_plan_env research_plan_env/

# Install dependencies as root, then clean up
RUN pip install --upgrade pip && \
    pip install ".[green-agent]"

# Switch to non-root user
USER agent

# Expose A2A default port
EXPOSE 9009

# Health check using curl (more reliable than Python in container)
HEALTHCHECK --interval=30s --timeout=10s --start-period=120s --retries=3 \
    CMD curl -sf http://localhost:9009/.well-known/agent.json || exit 1

# Run the Green Agent server
ENTRYPOINT ["research-plan-green-agent"]
CMD ["--host", "0.0.0.0", "--port", "9009"]
